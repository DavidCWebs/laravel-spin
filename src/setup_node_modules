#!/bin/bash

function install_node_modules {
    cd $ROOT_PATH

    PS3='Install Node Modules using Yarn or NPM?'
    NODE_OPTIONS=("yarn" "npm" "Quit")
    select NODE_OPTION in "${NODE_OPTIONS[@]}";
    do
        case "$NODE_OPTION" in
            "yarn")
            yarn install
            break
            ;;
            "npm")
            npm install
            break
            ;;
            "Quit")
            break
            ;;
            *) echo invalid option;;
        esac
    done
}
